<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jamie.primedic_.RegistrationActivity">

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        android:layout_column="18"
        android:layout_span="4"
        android:layout_x="20dp"
        android:layout_y="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last name "
        android:layout_column="18"
        android:layout_x="20dp"
        android:layout_y="144dp"
        android:layout_below="@+id/etFirstName"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:layout_column="18"
        android:layout_x="20dp"
        android:layout_y="187dp"
        android:layout_below="@+id/etLastName"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail address"
        android:inputType="textEmailAddress"
        android:layout_column="18"
        android:layout_x="15dp"
        android:layout_y="242dp"
        android:layout_below="@+id/etPhone"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_column="18"
        android:layout_x="15dp"
        android:layout_y="292dp"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etPassword2"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Re enter Password"
        android:inputType="textPassword"
        android:layout_column="18"
        android:layout_x="15dp"
        android:layout_y="345dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:onClick="signup"
        android:text="Sign me up"
        android:layout_column="18"
        android:layout_x="93dp"
        android:layout_y="412dp"
        android:layout_below="@+id/etPassword2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <AbsoluteLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#15668f">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Registration"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:layout_x="89dp"
            android:layout_y="30dp"
            android:textColor="#ffffff"
            android:autoText="false" />


    </AbsoluteLayout>
</AbsoluteLayout>
